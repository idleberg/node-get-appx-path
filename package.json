		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-get-appx-path.git"
	},
