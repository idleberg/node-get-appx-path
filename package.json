	"dependencies": {
		"exec-powershell": "^1.0.1",
		"node-powershell": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.7.0",
		"@types/node-powershell": "4",
		"concurrently": "^9.2.1",
		"klip": "^0.2.0",
		"knip": "^5.64.2",
		"publint": "^0.3.14",
		"tsdown": "^0.15.6",
		"vitest": "^3.2.4"
	}
}
